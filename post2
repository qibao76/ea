create table comment(
	comment_id int not null auto_increment,
	comment_content varchar(200),
	post_id int,
	primary key(comment_id)
)
create table post(
	post_id int not null auto_increment,
	post_content varchar(200),
	post_time date,
	person_id int,
	primary key (post_id)
)
